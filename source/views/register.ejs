<%- include ('./partials/head') -%>
    <%- include ('./partials/navbar') -%>
        <form action="/register-add" method="post">
            <main class="main-login">
                <h2>Registrarse</h2>
                <div class="card-login">
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        <input type="text" name="name" id="">
                        <% if (locals.errores && locals.errores.name) { %>
                            <p class="feedback">
                                <%= locals.errores.name.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="email">Correo</label>
                        <input type="email" name="email" id="">
                        <% if (locals.errores && locals.errores.email) { %>
                            <p class="feedback">
                                <%= locals.errores.email.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="">
                        <% if (locals.errores && locals.errores.password) { %>
                            <p class="feedback">
                                <%= locals.errores.password.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="rol">Rol</label>
                        <select name="rol" id="">
                            <option value="">Seleccione rol</option>
                            <option value="0">Usuario</option>
                            <option value="1">Amdministrador</option>
                        </select>
                        <% if (locals.errores && locals.errores.rol) { %>
                            <p class="feedback">
                                <%= locals.errores.rol.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div class="form-group-button">
                        <button type="submit">Registrarse</button>
                        <button type="button"><a href="/login">Iniciar session</a></button>
                    </div>
                </div>
            </main>
        </form>
        <%- include ('./partials/footer') -%>