<%- include ('./partials/head') -%>
    <%- include ('./partials/navbar') -%>
        <form action="/loggend" method="post">
            <main class="main-login">
                <h2>Iniciar session</h2>
                <div class="card-login">
                    <div class="form-group">
                        <label for="email">Correo</label>
                        <input type="email" name="email" id="">
                        <% if (locals.errores && locals.errores.email) { %>
                            <p class="feedback">
                                <%= locals.errores.email.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="">
                        <% if (locals.errores && locals.errores.password) { %>
                            <p class="feedback">
                                <%= locals.errores.password.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div class="form-group-button">
                        <button type="submit">Ingresar</button>
                        <button type="button"><a href="/register">Registrarse</a></button>
                    </div>
                </div>
            </main>
        </form>
        <%- include ('./partials/footer') -%>